{
  "manifest_version": 3,
  "name": "Page Authenticity Checker",
  "version": "1.0",
  "description": "Check if the page is authentic or potentially unsafe.",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "512": "icon.png"
  }
}
